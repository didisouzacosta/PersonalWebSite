---
interface Props {
    lang?: string;
    currentPath?: string;
}

const { lang = 'en', currentPath = '/' } = Astro.props;

// URL mapping for language toggle
function getAltLangUrl(path: string, currentLang: string): string {
    if (currentLang === 'en') {
        // EN → PT-BR
        if (path === '/' || path === '') return '/pt-br/';
        if (path.startsWith('/apps/loopsize')) return '/pt-br/apps/loopsize';
        if (path.startsWith('/apps/kuborush')) return '/pt-br/apps/kuborush';
        if (path.startsWith('/resume')) return '/resume/pt-br';
        return path;
    } else {
        // PT-BR → EN
        if (path === '/pt-br/' || path === '/pt-br') return '/';
        if (path.startsWith('/pt-br/apps/loopsize')) return '/apps/loopsize';
        if (path.startsWith('/pt-br/apps/kuborush')) return '/apps/kuborush';
        if (path.startsWith('/resume/pt-br')) return '/resume';
        return path;
    }
}

const isPtBr = lang === 'pt-br';
const altLangUrl = getAltLangUrl(currentPath, lang);
const altLangLabel = isPtBr ? 'EN' : 'PT';
const homeUrl = isPtBr ? '/pt-br/' : '/';
const isHome = currentPath === '/' || currentPath === '/pt-br/' || currentPath === '/pt-br';
---

<div class="controls">
    {!isHome && (
        <a href={homeUrl} class="ctrl-btn" aria-label="Go to home">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2"
                 stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
        </a>
    )}
    <button
        id="theme-toggle"
        class="ctrl-btn"
        aria-label="Toggle theme"
        title="Toggle dark/light mode"
    >
        <span class="icon-sun" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="5"/>
                <line x1="12" y1="1" x2="12" y2="3"/>
                <line x1="12" y1="21" x2="12" y2="23"/>
                <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                <line x1="1" y1="12" x2="3" y2="12"/>
                <line x1="21" y1="12" x2="23" y2="12"/>
                <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
            </svg>
        </span>
        <span class="icon-moon" aria-hidden="true">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
            </svg>
        </span>
    </button>

    <a
        href={altLangUrl}
        class="ctrl-btn lang-btn"
        aria-label={`Switch to ${altLangLabel}`}
    >
        {altLangLabel}
    </a>
</div>

<style>
    .controls {
        position: fixed;
        top: 20px;
        right: 24px;
        z-index: 100;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .ctrl-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background-color: var(--bg-secondary);
        border: 1px solid var(--border);
        color: var(--text-secondary);
        cursor: pointer;
        font-size: 13px;
        font-weight: 600;
        font-family: inherit;
        text-decoration: none;
        transition: background-color 0.2s ease-out, color 0.2s ease-out, opacity 0.2s ease-out;
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
    }

    .ctrl-btn:hover {
        color: var(--text-primary);
        opacity: 1;
        background-color: var(--bg-tertiary);
    }

    /* Show sun icon in dark mode, moon icon in light mode */
    .icon-sun { display: none; }
    .icon-moon { display: flex; }

    :global([data-theme="dark"]) .icon-sun { display: flex; }
    :global([data-theme="dark"]) .icon-moon { display: none; }
</style>

<script is:inline>
    const themeBtn = document.getElementById('theme-toggle');

    function applyTheme(theme) {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
    }

    themeBtn?.addEventListener('click', () => {
        const current = document.documentElement.getAttribute('data-theme');
        applyTheme(current === 'dark' ? 'light' : 'dark');
    });
</script>

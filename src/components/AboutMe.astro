---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components'

import '../styles/global.css'

import cleanerXcodeAppIcon from '../../public/app_icons/CleanerXcodeAppIcon.png';
import formidableAppIcon from '../../public/app_icons/FormidableAppIcon.png';
import { lazy } from 'astro:schema';
---

<div id="container">
	<main>
		<section>
			<a href="https://github.com/didisouzacosta">
				<Image src="https://avatars.githubusercontent.com/u/11352503?v=4" alt="Adriano Souza Costa" width="120" height="120" loading="lazy" class="avatar"/>
			</a>
			
			<h1 class="name black">
				Adriano Souza Costa
			</h1>
		</section>

		<section>
			<p class="profession">
				iOS/MacOS Developer
			</p>

			<p class="black">
				Swift • SwiftUI • SwiftData •  Objective-C • CI/CD • React Native • Apple Store Publishing
			</p>

			<p>
				I specialize in developing iOS applications accross multiple platforms, priorizing user experience and design excellence. Collaborating with cross-functional teams, delivery through intuitive app interfaces using Swift, UIKit, Swiftui, Objective-C, CoreData/SwiftData, or React Native.
			</p>

			<p class="social">
				<a href="https://x.com/didisouzacosta" target="_blank">
					<Icon name="x" class="social-icon black"/>
				</a>

				<a href="https://github.com/didisouzacosta" target="_blank">
					<Icon name="github" class="social-icon black"/>
				</a>

				<a href="https://www.linkedin.com/in/adrianosouzacosta" target="_blank">
					<Icon name="linkedin" class="social-icon black"/>
				</a>
			</p>
		</section>

		<section class="projects">
			<a href="https://github.com/didisouzacosta/CleanerXcode" target="_blank">
				<div class="app">
					<Image src={cleanerXcodeAppIcon} alt="CleanerXcode" loading="lazy" class="app-icon"/>
					<h4 class="app-title black">
						CleanerXcode
					</h4>

					<div class="tags">
						<span class="tag free">
							Free
						</span>
						<span class="tag">
							MacOS
						</span>
					</div>
				</div>
			</a>

			<a href="https://github.com/didisouzacosta/Formidable" target="_blank">
				<div class="app">
					<Image src={formidableAppIcon} alt="Formidable" loading="lazy" class="app-icon"/>
					<h4 class="app-title black">
						Formidable
					</h4>

					<div class="tags">
						<span class="tag">
							Framework
						</span>
					</div>
				</div>
			</a>
		</section>

	</main>
</div>

<style>
	main {
		height: 100%;
		max-width: 800px;
		display: flex;
		flex-direction: column;
		margin: 0 auto;
		justify-content: center;
	}

	h1 {
		margin-bottom: 0px;
		padding-bottom: 0px;
	}

	a {
		color: inherit;
  		text-decoration: none;
	}

	a:hover {
		opacity: 0.6;
		transition: opacity .2s ease-out;
		-moz-transition: opacity .2s ease-out;
		-webkit-transition: opacity .2s ease-out;
		-o-transition: opacity .2s ease-out;
	}

	img.avatar {
		border-radius: 50%;
	}

	p.profession {
		margin: 0px;
		padding: 0px;
	}

	ul.skills {
		display: flex;
		padding: 0px;
		margin: 16px 0px 16px 0px;
		list-style: none;
	}

	ul.skills li {
		margin-right: 8px;
		margin-left: 8px;
	}

	p.social a + a {
    	margin-left: 8px;
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		font-size: 16px;
		height: 100dvh;
	}

	.projects {
		display: grid;
		grid-template-columns: repeat(5, 1fr);
		column-gap: 16px;
  		row-gap: 16px;
		margin-top: 32px;
	}

	.projects .app {
		text-align: center;
	}

	.projects .app .app-icon {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.projects h4 {
		padding: 0px;
		margin: 0px;
	}

	.social-icon {
		width: 22px;
		height: 22px;
	}

	.tags .tag + .tag {
    	margin-left: 8px;
	}

	.tag {
		padding: 3px 8px 4px 8px;
		background-color: white;
		font-size: 10px;
		border-radius: 16px;
		color: black;
	}

	.tag.free {
		background: #48AE26;
		color: white;
	}
</style>

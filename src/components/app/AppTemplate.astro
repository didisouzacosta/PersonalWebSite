---
import Layout from "../../layouts/Layout.astro";
import FaqAccordion from "../../components/FaqAccordion.astro";

interface Props {
    appId: string,
    title: string,
    favicon: string,
    appIcon: string,
    description: string,
    screenshots: { url: string, alt: string }[],
    faq: { question: string, answer: string }[],
    metas: { name: string, content: string }[],
    lang?: string,
}

const { appId, title, metas, favicon, appIcon, description, screenshots, faq, lang } = Astro.props;

const baseAssetsURL = 'https://pub-81dc0daed73f4a358469301b9b80f493.r2.dev/'
const currentPath = Astro.url.pathname;
---

<Layout
    title={title}
    favicon={favicon}
    description={description}
    metas={metas}
    lang={lang}
>
    <main class="app-page">

        <header class="app-header">
            <div class="container app-header-inner">
                <img
                    src=`${baseAssetsURL}apps/${appIcon}`
                    alt={`${title} app icon`}
                    fetchpriority="high"
                    class="app-icon"
                    width="120"
                    height="120"
                />
                <h1 class="app-title">{title}</h1>
                <p class="app-subtitle">{description}</p>
                <a
                    href=`https://apps.apple.com/us/app/video-ai-art-generator-maker/${appId}?itscg=30200&itsct=apps_box_badge&mttnsubad=6450398697`
                    aria-label=`Download ${title} on the App Store`
                    target="_blank"
                    rel="noopener noreferrer"
                    class="app-store-link no-ext-icon"
                >
                    <img
                        src="https://toolbox.marketingtools.apple.com/api/v2/badges/download-on-the-app-store/black/en-us?releaseDate=1687219200"
                        alt="Download on the App Store"
                        class="app-store-badge"
                        width="160"
                        height="54"
                    />
                </a>
            </div>
        </header>

        <section class="screenshots-section" aria-label="Screenshots">
            <ul class="screenshots">
                {
                    screenshots.map(screenshot => (
                        <li>
                            <figure>
                                <img
                                    src=`${baseAssetsURL}apps/${screenshot.url}`
                                    alt={screenshot.alt}
                                    loading="lazy"
                                />
                            </figure>
                        </li>
                    ))
                }
            </ul>
            <dialog id="screenshot-lightbox" aria-label="Screenshot preview">
                <button id="lightbox-close" aria-label="Close preview">&#x2715;</button>
                <img id="lightbox-img" src="" alt="" />
            </dialog>
        </section>

        <section class="faq-section section-sm" aria-labelledby="faq-heading">
            <div class="container">
                <h2 id="faq-heading" class="faq-heading">FAQ</h2>
                <FaqAccordion items={faq} />
            </div>
        </section>

        <footer class="app-footer">
            <div class="container">
                <nav aria-label="Legal links">
                    <a href={`${currentPath}/terms-of-use`}>Terms of use</a>
                    <span aria-hidden="true">&bull;</span>
                    <a href={`${currentPath}/privacy-policy`}>Privacy policy</a>
                </nav>
            </div>
        </footer>
    </main>
</Layout>

<style>
    .app-page {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    /* Header */
    .app-header {
        padding: 80px 0 64px;
        text-align: center;
    }

    .app-header-inner {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
    }

    .app-icon {
        width: 120px;
        height: 120px;
        border-radius: 27px;
        object-fit: cover;
        border: 1px solid var(--border);
    }

    .app-title {
        font-size: clamp(32px, 5vw, 48px);
        font-weight: 700;
        letter-spacing: -0.03em;
        color: var(--text-primary);
        margin: 0;
    }

    .app-subtitle {
        font-size: 17px;
        color: var(--text-secondary);
        max-width: 520px;
        margin: 0;
        line-height: 1.6;
    }

    .app-store-link {
        display: inline-flex;
        margin-top: 8px;
        transition: opacity 0.2s ease-out, transform 0.2s ease-out;
    }

    .app-store-link:hover {
        opacity: 0.75;
        transform: translateY(-1px);
    }

    .app-store-badge {
        height: 44px;
        width: auto;
    }

    /* Screenshots */
    .screenshots-section {
        background-color: var(--bg-secondary);
        padding: 48px 16px;
    }

    .screenshots {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 8px;
        max-width: 1400px;
        margin: 0 auto;
        list-style: none;
        padding: 0;
    }

    .screenshots li {
        width: calc((1400px - 5 * 8px) / 6);
    }

    .screenshots figure {
        margin: 0;
    }

    .screenshots figure img {
        width: 100%;
        border-radius: 16px;
        cursor: pointer;
        transition: transform 200ms ease, box-shadow 200ms ease;
    }

    .screenshots figure img:hover {
        transform: scale(1.04);
        box-shadow: var(--shadow-hover);
    }

    /* Lightbox */
    #screenshot-lightbox {
        padding: 0;
        border: none;
        border-radius: 20px;
        background: transparent;
        max-width: 90vw;
        max-height: 90vh;
        position: relative;
    }

    #screenshot-lightbox::backdrop {
        background: rgba(0, 0, 0, 0.75);
        backdrop-filter: blur(6px);
    }

    #lightbox-img {
        display: block;
        max-width: 90vw;
        max-height: 90vh;
        border-radius: 20px;
        object-fit: contain;
    }

    #lightbox-close {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(0, 0, 0, 0.55);
        color: white;
        border: none;
        border-radius: 50%;
        width: 34px;
        height: 34px;
        font-size: 16px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    /* FAQ */
    .faq-section {
        border-top: 1px solid var(--border);
    }

    .faq-heading {
        font-size: 28px;
        font-weight: 700;
        letter-spacing: -0.02em;
        color: var(--text-primary);
        margin-bottom: 24px;
    }

    /* Footer */
    .app-footer {
        padding: 32px 0;
        border-top: 1px solid var(--border);
    }

    .app-footer nav {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 14px;
        color: var(--text-tertiary);
    }

    .app-footer nav a {
        color: var(--text-secondary);
        transition: color 0.2s ease-out;
    }

    .app-footer nav a:hover {
        color: var(--text-primary);
        opacity: 1;
    }

    @media only screen and (max-width: 768px) {
        .app-icon {
            width: 96px;
            height: 96px;
        }

        .screenshots li {
            width: calc(50% - 4px);
        }
    }
</style>

<script>
    const dialog = document.getElementById('screenshot-lightbox') as HTMLDialogElement;
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
    const closeBtn = document.getElementById('lightbox-close');

    document.querySelectorAll('.screenshots figure img').forEach(img => {
        img.addEventListener('click', () => {
            const image = img as HTMLImageElement;
            lightboxImg.src = image.src;
            lightboxImg.alt = image.alt;
            dialog.showModal();
        });
    });

    closeBtn?.addEventListener('click', () => dialog.close());

    dialog.addEventListener('click', (e) => {
        if (e.target === dialog) dialog.close();
    });
</script>

---
const apps = [
    {
        name: "KuboRush",
        description: "Block puzzle game",
        tags: ["iOS App", "Free"],
        imageUrl:
            "https://pub-81dc0daed73f4a358469301b9b80f493.r2.dev/apps/kuborush/app-icon.png",
        url: "/apps/kuborush",
    },
    {
        name: "LoopSize",
        description: "Ring size converter",
        tags: ["iOS App", "Free"],
        imageUrl:
            "https://pub-81dc0daed73f4a358469301b9b80f493.r2.dev/apps/loopsize/app-icon.png",
        url: "/apps/loopsize",
    },
    {
        name: "CleanerXcode",
        description: "Xcode cache cleaner",
        tags: ["macOS App", "Free"],
        imageUrl:
            "https://pub-81dc0daed73f4a358469301b9b80f493.r2.dev/apps/cleanerxcode/app-icon.png",
        url: "https://github.com/didisouzacosta/CleanerXcode",
        target: "_blank",
    },
    {
        name: "Formidable",
        description: "Swift form framework",
        tags: ["Framework"],
        imageUrl:
            "https://pub-81dc0daed73f4a358469301b9b80f493.r2.dev/apps/formidable/app-icon.png",
        url: "https://github.com/didisouzacosta/Formidable",
        target: "_blank",
    },
];
---

<ul class="projects-grid" role="list">
    {
        apps.map((app) => (
            <li>
                <article class="project-card">
                    <a
                        href={app.url}
                        target={app.target}
                        rel={app.target === "_blank" ? "noopener noreferrer" : undefined}
                        aria-label={`${app.name} — ${app.description}`}
                        class={`card-link${app.target === "_blank" ? " no-ext-icon" : ""}`}
                    >
                        <img
                            src={app.imageUrl}
                            alt={`${app.name} app icon`}
                            loading="lazy"
                            class="app-icon"
                            width="64"
                            height="64"
                        />
                        <div class="card-info">
                            <h3 class="app-name">
                                {app.name}
                                {app.target === "_blank" && (
                                    <span class="ext-icon" aria-label="opens in new tab">↗</span>
                                )}
                            </h3>
                            <p class="app-description">{app.description}</p>
                            <div class="tags" role="list">
                                {app.tags.map((tag) => (
                                    <span role="listitem" class="tag">{tag}</span>
                                ))}
                            </div>
                        </div>
                    </a>
                </article>
            </li>
        ))
    }
</ul>

<style>
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        margin-top: 40px;
    }

    .project-card {
        background-color: var(--bg-secondary);
        border-radius: var(--radius-card);
        transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
    }

    .project-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }

    .card-link {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 20px;
        opacity: 1;
    }

    .card-link:hover {
        opacity: 1;
    }

    .app-icon {
        width: 64px;
        height: 64px;
        border-radius: 14px;
        object-fit: cover;
        flex-shrink: 0;
    }

    .card-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
        min-width: 0;
    }

    .app-name {
        font-size: 16px;
        font-weight: 600;
        letter-spacing: -0.01em;
        color: var(--text-primary);
    }

    .ext-icon {
        font-size: 0.65em;
        opacity: 0.45;
        vertical-align: super;
        margin-left: 2px;
        transition: opacity 0.2s ease-out;
    }

    .card-link:hover .ext-icon {
        opacity: 0.8;
    }

    .app-description {
        font-size: 13px;
        color: var(--text-secondary);
        margin-bottom: 6px;
    }

    @media only screen and (max-width: 600px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

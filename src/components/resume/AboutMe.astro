---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import type { HomepageContent } from "../../core/homepage";

import Projects from "./Projects.astro";

interface Props {
    content: HomepageContent;
}

const { content } = Astro.props;
---

<nav class="home-nav" aria-label="Page sections">
	<a href="#about">{content.aboutTitle}</a>
	<span class="nav-sep" aria-hidden="true">â€¢</span>
	<a href="#projects">{content.projectsTitle}</a>
</nav>

<main>
	<section id="hero" aria-label="Introduction" class="hero-section">
		<div class="container hero-inner">
			<Image
				src="https://avatars.githubusercontent.com/u/11352503?v=4"
				alt="Adriano Souza Costa"
				width="140"
				height="140"
				loading="eager"
				class="avatar fade-in"
			/>

			<h1 class="hero-name fade-in" data-delay="1">Adriano<br />Souza Costa</h1>

			<p class="hero-title fade-in" data-delay="1">{content.role}</p>

			<div class="hero-cta fade-in" data-delay="2">
				<a href={content.resumeLink} class="btn-primary">
					<span>{content.resumeLabel}</span>
					<Icon name="right-arrow" width={12} height={12} />
				</a>
			</div>

			<nav class="social-links fade-in" data-delay="3" aria-label="Social links">
				<a
					href="https://x.com/didisouzacosta"
					target="_blank"
					rel="noopener noreferrer"
					aria-label="X (Twitter)"
					class="no-ext-icon"
				>
					<Icon name="x" class="social-icon" />
				</a>
				<a
					href="https://github.com/didisouzacosta"
					target="_blank"
					rel="noopener noreferrer"
					aria-label="GitHub"
					class="no-ext-icon"
				>
					<Icon name="github" class="social-icon" />
				</a>
				<a
					href="https://www.linkedin.com/in/adrianosouzacosta"
					target="_blank"
					rel="noopener noreferrer"
					aria-label="LinkedIn"
					class="no-ext-icon"
				>
					<Icon name="linkedin" class="social-icon" />
				</a>
			</nav>
		</div>
	</section>

	<section id="about" aria-label="About me" class="section about-section fade-in">
		<div class="container">
			<h2 class="section-title">{content.aboutTitle}</h2>
			<p class="bio">{content.bio}</p>
			<div class="skills tags" role="list" aria-label="Technical skills">
				{content.skills.map((skill) => (
					<span role="listitem" class="tag">{skill}</span>
				))}
			</div>
		</div>
	</section>

	<section id="projects" aria-label="Projects" class="section projects-section fade-in">
		<div class="container">
			<h2 class="section-title">{content.projectsTitle}</h2>
			<Projects />
		</div>
	</section>
</main>

<style>
	/* Hero */
	.hero-section {
		min-height: 100svh;
		display: flex;
		align-items: center;
	}

	.hero-inner {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		gap: 0;
		padding-top: 80px;
		padding-bottom: 80px;
	}

	.avatar {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		object-fit: cover;
		margin-bottom: 32px;
		border: 1px solid var(--border-strong);
	}

	.hero-name {
		font-size: clamp(52px, 8vw, 80px);
		font-weight: 700;
		letter-spacing: -0.04em;
		line-height: 1.02;
		color: var(--text-primary);
		margin-bottom: 16px;
	}

	.hero-title {
		font-size: clamp(20px, 3vw, 28px);
		font-weight: 400;
		color: var(--text-secondary);
		letter-spacing: -0.01em;
		margin-bottom: 40px;
	}

	.hero-cta {
		margin-bottom: 40px;
	}

	.btn-primary {
		display: inline-flex;
		align-items: center;
		gap: 6px;
		background-color: var(--text-primary);
		color: var(--bg);
		font-size: 15px;
		font-weight: 500;
		padding: 10px 20px;
		border-radius: 980px;
		transition: opacity 0.2s ease-out, transform 0.2s ease-out;
	}

	.btn-primary:hover {
		opacity: 0.75;
		transform: translateY(-1px);
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 20px;
	}

	.social-links a {
		display: flex;
		align-items: center;
		color: var(--text-secondary);
		transition: color 0.2s ease-out, opacity 0.2s ease-out;
	}

	.social-links a:hover {
		color: var(--text-primary);
		opacity: 1;
	}

	.social-icon {
		width: 22px;
		height: 22px;
	}

	/* About */
	.about-section {
		border-top: 1px solid var(--border);
	}

	.section-title {
		font-size: clamp(36px, 5vw, 48px);
		font-weight: 700;
		letter-spacing: -0.03em;
		color: var(--text-primary);
		margin-bottom: 24px;
	}

	.bio {
		font-size: 17px;
		line-height: 1.7;
		color: var(--text-secondary);
		max-width: 620px;
		margin-bottom: 28px;
	}

	.skills {
		gap: 6px;
	}

	/* Projects */
	.projects-section {
		border-top: 1px solid var(--border);
	}

	/* Home nav */
	.home-nav {
		position: fixed;
		top: 20px;
		left: 24px;
		z-index: 100;
		display: flex;
		align-items: center;
		gap: 2px;
	}

	.home-nav a {
		font-size: 14px;
		font-weight: 500;
		color: var(--text-secondary);
		padding: 8px 12px;
		border-radius: 980px;
		transition: color 0.2s ease-out, background-color 0.2s ease-out, opacity 0.2s ease-out;
	}

	.home-nav a:hover {
		color: var(--text-primary);
		background-color: var(--bg-secondary);
		opacity: 1;
	}

	.nav-sep {
		font-size: 12px;
		color: var(--text-tertiary);
		padding: 0 2px;
		user-select: none;
	}

	@media (max-width: 480px) {
		.home-nav { display: none; }
	}
</style>

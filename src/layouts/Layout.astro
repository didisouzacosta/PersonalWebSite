---
import '../styles/global.css'

const { title, description, favicon = "/favicon-32x32.png" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={favicon} />
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, follow">
		<link rel="canonical" href="https://adrianosouzacosta.com.br">
		<meta name="description" content={description}>

		<title>{title}</title>

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-BSDWW4LMHQ"></script>
		<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-BSDWW4LMHQ');
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
